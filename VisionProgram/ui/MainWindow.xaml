<Window x:Class="VisionProgram.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VisionProgram"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <!-- Tiêu đề của chương trình -->
        <TextBlock Text="Chương trình vision" 
                   FontSize="24" 
                   HorizontalAlignment="Center" 
                   VerticalAlignment="Top" 
                   Margin="10"/>

        <!-- Phím chức năng So sánh -->
        <Button Content="So sánh" 
                Width="120" 
                Height="40" 
                VerticalAlignment="Center" 
                HorizontalAlignment="Center" 
                Margin="10,0,10,80" 
                Click="CompareButton_Click"/>

        <!-- Phím chức năng Cài đặt -->
        <Button Content="Cài đặt" 
                Width="120" 
                Height="40" 
                VerticalAlignment="Center"  
                HorizontalAlignment="Center" 
                Margin="10,100,10,30" 
                Click="SettingsButton_Click"/>
    </Grid>
</Window>
